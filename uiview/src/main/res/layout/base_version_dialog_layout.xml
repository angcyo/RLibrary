<?xml version="1.0" encoding="utf-8"?>
<com.angcyo.uiview.viewgroup.RFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/base_xxhdpi"
    android:layout_marginStart="@dimen/base_xxhdpi"
    android:background="@drawable/base_white_round_bg_5x"
    app:r_max_height="-0.75px">

    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:src="@drawable/base_beijng_backgrond" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/base_version_title_view"
            style="@style/BaseMainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/base_xhdpi"
            android:paddingEnd="@dimen/base_xxhdpi"
            android:paddingStart="@dimen/base_xxhdpi"
            android:paddingTop="@dimen/base_xhdpi"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="测试文本标题"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingEnd="@dimen/base_xxhdpi"
            android:paddingStart="@dimen/base_xxhdpi">

            <com.angcyo.uiview.widget.RTextView
                android:id="@+id/base_version_content_view"
                style="@style/BaseDarkTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:lineSpacingExtra="4dp"
                tools:text="测试文本内容\nasdf\nnasdf"/>

        </ScrollView>

        <com.angcyo.uiview.widget.SimpleProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_ldpi"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/base_hdpi"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.angcyo.uiview.widget.RTextView
            android:id="@+id/base_version_download_view"
            style="@style/BaseMainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/base_xhdpi"
            android:layout_marginTop="@dimen/base_hdpi"
            android:background="@drawable/base_icon_naniu_button"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/base_white"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/base_version_cancel_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/base_ldpi"
        android:background="@drawable/base_bg2_selector_v21"
        android:padding="@dimen/base_ldpi"
        android:src="@drawable/base_icon_cha_button"
        tools:visibility="visible"/>

</com.angcyo.uiview.viewgroup.RFrameLayout>