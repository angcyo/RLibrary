<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:background="@drawable/base_left_round_tran60_shape"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/base_toast_image_view"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="@dimen/base_ldpi"
        android:scaleType="fitXY"
        tools:src="@drawable/base_info"/>

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/base_toast_text_view"
        style="@style/BaseMainTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/base_white"
        android:textSize="12dp"
        tools:text="测试内容"/>
</LinearLayout>