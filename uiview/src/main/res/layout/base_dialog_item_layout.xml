<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/base_gray">

    <com.angcyo.uiview.widget.RTextView
        android:id="@+id/base_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_white"
        android:gravity="center"
        android:padding="@dimen/base_xhdpi"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="我是标题"/>

    <!--Item填充-->
    <LinearLayout
        android:id="@+id/item_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_white_round_bg"
        android:divider="@drawable/base_shape_line"
        android:dividerPadding="@dimen/base_0dpi"
        android:orientation="vertical"
        android:showDividers="middle"/>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_xxhdpi"/>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line"
        android:background="@color/default_base_line"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/cancel_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_button_height"
        android:background="@drawable/base_white_round_bg">

        <TextView
            android:id="@+id/cancel_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/base_round_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/base_cancel"
            android:textColor="@color/theme_color_accent"
            android:textSize="@dimen/default_text_size"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_xxhdpi"/>

</LinearLayout>