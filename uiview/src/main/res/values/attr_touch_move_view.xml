<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--需要显示的文本-->
    <attr name="r_text_normal" format="string"/>
    <attr name="r_text_selected" format="string"/>
    <!--文本图片之间的间隙-->
    <attr name="r_text_space" format="dimension"/>
    <!--图片允许最大的偏移量-->
    <attr name="r_max_draw_offset" format="dimension"/>
    <attr name="r_text_color_normal" format="color"/>
    <attr name="r_text_color_selected" format="color"/>
    <!--正常情况下的图片-->
    <attr name="r_image_normal" format="reference"/>
    <!--内部正常情况下的图片-->
    <attr name="r_sub_image_normal" format="reference"/>
    <!--选中情况下的图片-->
    <attr name="r_image_selected" format="reference"/>
    <attr name="r_sub_image_selected" format="reference"/>

    <declare-styleable name="TouchMoveView">
        <!--需要显示的文本-->
        <attr name="r_text_normal"/>
        <attr name="r_text_selected"/>
        <attr name="r_show_text_size"/>
        <!--文本图片之间的间隙-->
        <attr name="r_text_space"/>
        <!--图片允许最大的偏移量-->
        <attr name="r_max_draw_offset"/>
        <attr name="r_text_color_normal"/>
        <attr name="r_text_color_selected"/>
        <!--正常情况下的图片-->
        <attr name="r_image_normal"/>
        <!--内部正常情况下的图片-->
        <attr name="r_sub_image_normal"/>
        <!--选中情况下的图片-->
        <attr name="r_image_selected"/>
        <attr name="r_sub_image_selected"/>
    </declare-styleable>

    <declare-styleable name="TouchMoveGroupLayout">
        <!--默认选中第几页-->
        <attr name="r_default_position" format="integer"/>
    </declare-styleable>
</resources>
