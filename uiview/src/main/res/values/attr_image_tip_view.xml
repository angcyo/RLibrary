<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ImageTipView">
        <!--需要显示的文本-->
        <attr name="r_text_normal"/>
        <attr name="r_text_selected"/>
        <attr name="r_show_text_size"/>
        <attr name="r_tip_text_size"/>
        <attr name="r_tip_text_color"/>
        <attr name="r_tip_text_bg"/>

        <attr name="r_tip_text"/>
        <!--提示文本距离图标中心的偏移-->
        <attr name="r_tip_text_left_offset"/>
        <attr name="r_tip_text_top_offset"/>
        <attr name="r_no_read_num" format="integer"/>
        <attr name="r_is_tip_mode" format="boolean"/>
        <attr name="r_drawable_height_measure_mode" format="enum">
            <enum name="WRAP_CONTENT" value="1"/>
            <enum name="MATCH_PARENT" value="2"/>
        </attr>
        <attr name="r_drawable_width_measure_mode" format="enum">
            <enum name="WRAP_CONTENT" value="1"/>
            <enum name="MATCH_PARENT" value="2"/>
        </attr>

        <!--文本图片之间的间隙-->
        <attr name="r_text_space"/>
        <attr name="r_text_color_normal"/>
        <attr name="r_text_color_selected"/>
        <!--正常情况下的图片-->
        <attr name="r_image_normal"/>
        <!--选中情况下的图片-->
        <attr name="r_image_selected"/>
    </declare-styleable>

</resources>
