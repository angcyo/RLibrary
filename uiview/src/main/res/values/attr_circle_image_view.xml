<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="r_show_type" format="enum">
            <!--正常-->
            <enum name="NORMAL" value="0"/>
            <!--圆形-->
            <enum name="CIRCLE" value="1"/>
            <!--圆角-->
            <enum name="ROUND" value="2"/>
        </attr>
        <!--ROUND 状态时, 圆角的大小-->
        <attr name="r_round_radius" format="dimension"/>
        <!--补充外圈线的颜色-->
        <attr name="r_line_color" format="color"/>
        <!--补充外圈线的宽度-->
        <attr name="r_line_width" format="dimension"/>
        <!--需要显示的文本-->
        <attr name="r_show_text"/>
        <attr name="r_show_text_color"/>
        <attr name="r_show_text_size"/>
        <attr name="r_text_offset"/>
    </declare-styleable>
</resources>