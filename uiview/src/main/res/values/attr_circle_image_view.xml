<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RImageView">
        <attr name="r_mask_gravity" format="enum">
            <enum name="MASK_GRAVITY_LT" value="1"/>
            <enum name="MASK_GRAVITY_RT" value="2"/>
            <enum name="MASK_GRAVITY_RB" value="3"/>
            <enum name="MASK_GRAVITY_LB" value="4"/>
        </attr>

        <attr name="r_show_mask_drawable" format="boolean"/>
        <attr name="r_mask_drawable"/>
        <attr name="r_mask_scale_x" format="float"/>
        <attr name="r_mask_scale_y" format="float"/>

        <attr name="r_show_noread"/>
        <attr name="r_noread_color"/>
        <attr name="r_noread_radius"/>
        <attr name="r_noread_padding_top"/>
        <attr name="r_noread_padding_right"/>

    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="r_show_type" format="enum">
            <!--正常-->
            <enum name="NORMAL" value="0"/>
            <!--圆形-->
            <enum name="CIRCLE" value="1"/>
            <!--圆角-->
            <enum name="ROUND" value="2"/>
            <!--长方形圆角-->
            <enum name="ROUND_RECT" value="3"/>
        </attr>
        <!--ROUND 状态时, 圆角的大小-->
        <attr name="r_round_radius" format="dimension"/>
        <!--补充外圈线的颜色-->
        <attr name="r_line_color" format="color"/>
        <!--补充外圈线的宽度-->
        <attr name="r_line_width" format="dimension"/>
        <attr name="r_equ_width"/>
        <attr name="r_equ_height"/>
        <attr name="r_width_height_ratio"/>
        <!--绘制边框-->
        <attr name="r_draw_border" format="boolean"/>
        <attr name="r_draw_inner_border" format="boolean"/>
        <!--&lt;!&ndash;需要显示的文本&ndash;&gt;-->
        <!--<attr name="r_show_text"/>-->
        <!--<attr name="r_show_text_color"/>-->
        <!--<attr name="r_show_text_size"/>-->
        <!--<attr name="r_text_offset"/>-->
        <attr name="r_scheme_version" format="enum">
            <enum name="SCHEME_MASK_DRAWABLE" value="3"/>
            <enum name="SCHEME_CANVAS_BITMAP" value="2"/>
            <enum name="SCHEME_CLIP_PATH" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="GlideImageView">
        <attr name="r_placeholder_drawable" format="reference"/>
        <attr name="r_no_placeholder_drawable" format="boolean"/>
        <attr name="r_url" format="string"/>
    </declare-styleable>
</resources>